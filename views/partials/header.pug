div.navbar-fixed
  nav.z-depth-0.white
    div.nav-wrapper.no-shadows
      a.brand-logo.app-blue-text.left Tutr
      ul#nav-mobile.right.hide-on-med-and-down
        if !user
          li(class=(title === 'Search') ? 'active' : undefined)
            a.nav-text(href='/search') Search
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-text(href='/login') Login
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-text(href='/signup') Create Account
        else
          li(class=(title === 'Home') ? 'active' : undefined)
            a.nav-text(href='/') Home
          li(class=(title === 'Search') ? 'active' : undefined)
            a.nav-text(href='/search') Search
          li(class=(title === 'Tutor') ? 'active' : undefined)
            a.nav-text(href='/tutor') Tutor
          li(class=(title === 'Logoff') ? 'active' : undefined)
            a.nav-text(href='/logout') Log Out
          li
            a.profile-link(href='/profile')
              if user.profile.picture
                img.profile-picture(src=user.profile.picture)
              else
                img.profile-picture(src=user.gravatar(64))
